<h1>Listing Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th> rated beers </th>
      <th> total ratings </th>
      <th>Member since</th>
      <% if current_user && current_user.admin? %>
          <th>Frozen</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.beers.size %></td>
        <td><%= user.ratings.size %></td>
        <td><%= user.created_at.to_date %></td>
        <% if current_user && current_user.admin? %>
            <td>
                <% if user.access_denied %>
                    <span class="label label-info">account frosen</span>
                <% end %>
            </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

