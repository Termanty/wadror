<p id="notice"><%= notice %></p>

<h1>Listing Breweries</h1>

<table class = "table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td>  <%= brewery.year %>  </td>
        <td><%= link_to 'Destroy', brewery, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <b>Number of breweries: <%= @breweries.count %></b>
</p>

<%= link_to 'New Brewery', new_brewery_path, class:"btn btn-primary" %>

