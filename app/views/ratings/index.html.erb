

<h2>Rating Statistics</h2>

<div class = "row" >
  <%= render 'best', top: @top_breweries, name: 'breweries' %>
  <%= render 'best', top: @top_beers, name: 'beers' %>
  <%= render 'best', top: @top_styles, name: 'styles' %>
</div>

<h3>Most active raters</h3>
<table class="table table-hover" >
  <thead>
      <tr>
        <th>name</th>
        <th>favorite beer</th>
        <th>prefered style</th>
        <th>favorite brewery</th>
        <th># ratings</th>
      </tr>
  </thead>
  <tbody>
    <% @top_raters.each do |rater| %>
      <tr>
          <td><%= link_to rater.username, rater %></td>
          <td><%= rater.favorite_beer %></td>
          <td></td>
          <td></td>
          <td><%= rater.ratings.count %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<h3>recent ratings</h3>
<ul>
    <% @recent_ratings.each do |rating| %>
    <li><%= rating %> <%= link_to rating.user.username, rating.user %></li>
    <% end %>
</ul>

<p>Number of all given ratings: <%= @ratings_count %></p>

<% unless current_user.nil? %>
    <%= link_to 'New Rating', new_rating_path, class:"btn btn-primary" %>
<% end %>